    <db:config name="HeavyMetalAPI__Database_Config" doc:name="Database Config" doc:id="f1a6f861-73fc-40a0-bb53-8dbea68dadab">
        <db:generic-connection url="jdbc:h2:mem:iag_products;INIT=RUNSCRIPT FROM 'classpath:database/heavy_metal_bands.sql'" driverClassName="org.h2.Driver" user="datacom" password="datacom" />
    </db:config>
    <http:listener-config name="sys-heavy-metal-bands-api-httpListenerConfig">
        <http:listener-connection host="0.0.0.0" port="8081" />
    </http:listener-config>
    <apikit:config name="sys-heavy-metal-bands-api-config" api="sys-heavy-metal-bands-api.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
    <flow name="sys-heavy-metal-bands-api-main">
        <http:listener config-ref="sys-heavy-metal-bands-api-httpListenerConfig" path="/api/*">
