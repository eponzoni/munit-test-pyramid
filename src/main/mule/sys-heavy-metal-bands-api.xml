    <flow name="get:\bands:sys-heavy-metal-bands-api-config">
		<db:select doc:name="List of Heavy Metal Bands" doc:id="d6463591-41de-47b0-9eb0-4ed0d34a9489" config-ref="HeavyMetalAPI__Database_Config">
			<db:sql >SELECT band_name FROM heavy_metal_bands ORDER BY band_name</db:sql>
		</db:select>
		<ee:transform doc:name="Java Collection to JSON" doc:id="80a77431-f1c2-4ac5-8f3f-d89f7bc123ac" >
			<ee:message >
				<ee:set-payload resource="dw/javaCollection_to_json.dwl" />
